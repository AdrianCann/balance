<h1 class="text-center">Funds</h1>

<div class="col-md-6">
  <ul class="list-group">
    <% @funds.each do |fund| %>
      <li class="list-group-item">
        <strong><%= fund.name %></strong>
        &#9;<%= fund.ticker %>
      </li>
      <li class="list-group-item">
        <%= simple_form_for fund do |f| %>
          <%= f.input :name %>
          <%= f.input :ticker %>
          <%= f.input :description %>
          <%= f.button :submit %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>

<div class="col-md-6">
  <%= simple_form_for @fund do |f| %>
    <%= f.input :name %>
    <%= f.input :ticker %>
    <%= f.input :description %>
    <%= f.button :submit %>
  <% end %>
</div>
